+def test_tip_selection_logging_format():
+    """Test that the tip selection logging format matches the spec: 'Chosen tip: {tip} (tip_key={tip_key})'."""
+    prompt_model = DummyLM([{"proposed_instruction": "instruction"}] * 10)
+    program = Predict("question -> answer")
+    trainset = []
+ 
+    # Create a mock RNG that returns a predictable choice and has the required methods
+    class MockRNG:
+        def choice(self, items):
+            return 'creative'
+        def random(self):
+            return 0.3  # Less than 0.5 to avoid history randomization
+        def uniform(self, a, b):
+            return 0.03  # Return a predictable value for epsilon
+ 
+    # Capture stdout to verify logging
+    with patch('sys.stdout', new=StringIO()) as mock_stdout:
+        proposer = GroundedProposer(
+            prompt_model=prompt_model, 
+            program=program, 
+            trainset=trainset, 
+            verbose=True,
+            set_tip_randomly=True,
+            rng=MockRNG()
+        )
+ 
+        # Call the method that triggers tip selection
+        result = proposer.propose_instructions_for_program(
+            trainset=trainset, 
+            program=program, 
+            demo_candidates=[[[dspy.Example(question="test", answer="test")]]], 
+            trial_logs={}, 
+            N=1, 
+            T=0.5
+        )
+ 
+        # Verify the result is correct
+        assert isinstance(result, dict)
+        assert len(result) == 1
+ 
+        # Check that the specific logging format appears
+        output = mock_stdout.getvalue()
+        assert "Chosen tip: Don't be afraid to be creative when creating the new instruction! (tip_key=creative)" in output
