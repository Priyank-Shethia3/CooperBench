+import pytest
+from unittest.mock import patch
+from io import StringIO
+
+import dspy
+from dspy.predict import Predict
+from dspy.propose.grounded_proposer import GroundedProposer
+from dspy.utils.dummies import DummyLM
+
+
+def test_tip_selection_logging_when_verbose_true():
+    """Test that tip selection is logged when verbose=True as specified in feature spec."""
+    prompt_model = DummyLM([{"proposed_instruction": "instruction"}] * 10)
+    program = Predict("question -> answer")
+    trainset = []
+ 
+    # Capture stdout to verify logging
+    with patch('sys.stdout', new=StringIO()) as mock_stdout:
+        proposer = GroundedProposer(
+            prompt_model=prompt_model, 
+            program=program, 
+            trainset=trainset, 
+            verbose=True,
+            set_tip_randomly=True
+        )
+ 
+        # Call the method that triggers tip selection
+        result = proposer.propose_instructions_for_program(
+            trainset=trainset, 
+            program=program, 
+            demo_candidates=[[[dspy.Example(question="test", answer="test")]]], 
+            trial_logs={}, 
+            N=1, 
+            T=0.5
+        )
+ 
+        # Verify the result is correct
+        assert isinstance(result, dict)
+        assert len(result) == 1
+ 
+        # Check that tip selection logging appears in stdout
+        output = mock_stdout.getvalue()
+        assert "Selected tip:" in output
+        # Should also see the "Chosen tip:" message from our new logging
+        assert "Chosen tip:" in output
+
