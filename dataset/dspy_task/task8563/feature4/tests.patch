+def test_identical_toolcalls_have_same_fingerprint():
+    """Test that identical tool calls produce the same fingerprint."""
+    call1 = ToolCalls.ToolCall(name="search", args={"query": "hello", "limit": 10})
+    call2 = ToolCalls.ToolCall(name="search", args={"query": "hello", "limit": 10})
+ 
+    assert call1.fingerprint == call2.fingerprint
+    assert call1.id == call2.id
+
