+def test_different_toolcalls_have_different_fingerprints():
+    """Test that different tool calls produce different fingerprints."""
+    call1 = ToolCalls.ToolCall(name="search", args={"query": "hello"})
+    call2 = ToolCalls.ToolCall(name="search", args={"query": "world"})
+    call3 = ToolCalls.ToolCall(name="translate", args={"query": "hello"})
+ 
+    assert call1.fingerprint != call2.fingerprint
+    assert call1.fingerprint != call3.fingerprint
+    assert call2.fingerprint != call3.fingerprint
+
