+def _canonicalize_args(args: Any) -> Any:
+    """Canonicalize arguments for consistent fingerprinting.
+ 
+    This function normalizes arguments to ensure that identical calls produce
+    the same fingerprint, ignoring harmless differences like:
+    - Dictionary key order
+    - Tuple vs list differences
+    - Leading/trailing whitespace in strings
+ 
+    Args:
+        args: The arguments to canonicalize
+ 
+    Returns:
+        Canonicalized arguments with consistent representation
+    """
+    if isinstance(args, dict):
+        # Sort keys and canonicalize values recursively
+        return {k: _canonicalize_args(v) for k, v in sorted(args.items())}
+    elif isinstance(args, list):
+        # Canonicalize each element in the list
+        return [_canonicalize_args(item) for item in args]
+    elif isinstance(args, tuple):
+        # Convert tuples to lists for consistency
+        return [_canonicalize_args(item) for item in args]
+    elif isinstance(args, str):
+        # Strip leading/trailing whitespace
+        return args.strip()
+    else:
+        # Return other types unchanged (numbers, booleans, None, etc.)
+        return args
