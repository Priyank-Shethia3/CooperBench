+# Test cases for ToolCalls metadata support feature
+def test_tool_call_with_basic_metadata():
+    """Test ToolCall with basic metadata fields."""
+    tool_call = ToolCalls.ToolCall(
+        name="search",
+        args={"query": "hello"},
+        note="This may take a while",
+        comment="User requested search",
+        priority="high"
+    )
+
+    assert tool_call.name == "search"
+    assert tool_call.args == {"query": "hello"}
+    assert tool_call.note == "This may take a while"
+    assert tool_call.comment == "User requested search"
+    assert tool_call.priority == "high"
+
