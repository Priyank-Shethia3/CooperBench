+def test_tool_call_with_complex_metadata():
+    """Test ToolCall with complex metadata types."""
+    tool_call = ToolCalls.ToolCall(
+        name="translate",
+        args={"text": "hello world", "lang": "fr"},
+        tags=["translation", "french"],
+        meta={"source": "user_input", "confidence": 0.95},
+        annotation="Translate user greeting to French"
+    )
+
+    assert tool_call.name == "translate"
+    assert tool_call.args == {"text": "hello world", "lang": "fr"}
+    assert tool_call.tags == ["translation", "french"]
+    assert tool_call.meta == {"source": "user_input", "confidence": 0.95}
