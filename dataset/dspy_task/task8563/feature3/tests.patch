+# Test cases for type coercion feature (PR #8563)
+def test_tool_coercion_boolean_strings():
+    """Test boolean string coercion: "true"/"false" → True/False (case-insensitive)."""
+    def bool_function(flag: bool, enabled: bool = False) -> str:
+        return f"Flag: {flag}, Enabled: {enabled}"
+ 
+    tool = Tool(bool_function)
+ 
+    # Test case-insensitive boolean strings
+    result = tool(flag="true", enabled="FALSE")
+    assert result == "Flag: True, Enabled: False"
+ 
+    # Test with actual boolean values (should not change)
+    result = tool(flag=True, enabled=False)
+    assert result == "Flag: True, Enabled: False"
+
+
+def test_tool_coercion_numeric_strings():
+    """Test numeric string coercion: "42"→42, "3.14"→3.14. Prefer int if exact; else float."""
+    def numeric_function(x: int, y: float, z: int = 0) -> str:
+        return f"x={x} (type: {type(x).__name__}), y={y} (type: {type(y).__name__}), z={z} (type: {type(z).__name__})"
+ 
+    tool = Tool(numeric_function)
+ 
+    # Test integer strings
+    result = tool(x="42", y="3.14", z="100")
+    assert "x=42 (type: int)" in result
+    assert "y=3.14 (type: float)" in result
+    assert "z=100 (type: int)" in result
+ 
+    # Test with actual numeric values (should not change)
+    result = tool(x=42, y=3.14, z=100)
+    assert "x=42 (type: int)" in result
+    assert "y=3.14 (type: float)" in result
+    assert "z=100 (type: int)" in result
+
+
+def test_tool_coercion_duration_strings():
+    """Test duration string coercion: (\\d+)(ms|s|m|h) → seconds as float."""
+    def duration_function(timeout: float, delay: float = 1.0) -> str:
+        return f"Timeout: {timeout}s, Delay: {delay}s"
+ 
+    tool = Tool(duration_function)
+ 
+    # Test examples from spec: "750ms"→0.75, "2m"→120
+    result = tool(timeout="750ms", delay="2m")
+    assert result == "Timeout: 0.75s, Delay: 120.0s"
+ 
+    # Test with actual numeric values (should not change)
+    result = tool(timeout=30.0, delay=1.5)
+    assert result == "Timeout: 30.0s, Delay: 1.5s"
+
+
+def test_tool_coercion_size_strings():
+    """Test size string coercion: (\\d+(\\.\\d+)?)(KB|MB|GB) → bytes as int using decimal (1KB=1000 bytes)."""
+    def size_function(memory: int, storage: int = 1024) -> str:
+        return f"Memory: {memory} bytes, Storage: {storage} bytes"
+ 
+    tool = Tool(size_function)
+ 
+    # Test examples from spec
+    result = tool(memory="1KB", storage="2MB")
+    assert result == "Memory: 1000 bytes, Storage: 2000000 bytes"
+ 
+    # Test with actual numeric values (should not change)
+    result = tool(memory=1000, storage=2048)
+    assert result == "Memory: 1000 bytes, Storage: 2048 bytes"
+
+
+def test_tool_coercion_whitespace_handling():
+    """Test that leading/trailing whitespace is stripped before coercion."""
+    def test_function(flag: bool, number: int, duration: float) -> str:
+        return f"Flag: {flag}, Number: {number}, Duration: {duration}s"
+ 
+    tool = Tool(test_function)
+ 
+    # Test with various whitespace patterns
+    result = tool(flag="  true  ", number="  42  ", duration="  1.5s  ")
+    assert result == "Flag: True, Number: 42, Duration: 1.5s"
+
+
+def test_tool_coercion_schema_type_compatibility():
+    """Test that coercion only runs when schema type is compatible."""
+    def mixed_function(text: str, number: int, flag: bool, duration: float) -> str:
+        return f"Text: '{text}', Number: {number}, Flag: {flag}, Duration: {duration}s"
+ 
+    tool = Tool(mixed_function)
+ 
+    # String field should NOT be coerced even if it looks numeric
+    result = tool(text="42", number="100", flag="true", duration="30s")
+    assert "Text: '42'" in result  # String remains string
+    assert "Number: 100" in result  # Integer string gets coerced
+    assert "Flag: True" in result   # Boolean string gets coerced
+    assert "Duration: 30.0s" in result  # Duration string gets coerced
+
+
+def test_tool_coercion_failure_handling():
+    """Test that failed coercion keeps original value and lets validation produce error."""
+    def test_function(number: int, duration: float) -> str:
+        return f"Number: {number}, Duration: {duration}s"
+ 
+    tool = Tool(test_function)
+ 
+    # Test with invalid numeric string - should keep original and let validation fail
