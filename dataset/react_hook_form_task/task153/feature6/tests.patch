@@ -524,4 +524,83 @@ describe('handleSubmit', () => {
 
     await waitFor(() => expect(onSubmit).toBeCalled());
   });
+
+  describe('handleSubmit with context', () => {
+    type FormData = { name: string };
+    const submitContext = { source: 'test-suite' };
+
+    it('should pass context to onValid', async () => {
+      const { result } = renderHook(() => useForm<FormData>());
+      const onValid = jest.fn();
+      const handle = result.current.handleSubmit(onValid);
+
+      await act(async () => {
+        await handle(undefined, submitContext);
+      });
+
+      expect(onValid).toHaveBeenCalledTimes(1);
+      expect(onValid).toHaveBeenCalledWith(expect.any(Object), undefined, submitContext);
+    });
+
+    it('should pass context to onInvalid', async () => {
+      const { result } = renderHook(() => useForm<FormData>());
+      result.current.register('name', { required: true });
+      const onValid = jest.fn();
+      const onInvalid = jest.fn();
+      const handle = result.current.handleSubmit(onValid, onInvalid);
+
+      await act(async () => {
+        await handle(undefined, submitContext);
+      });
+
+      expect(onValid).not.toHaveBeenCalled();
+      expect(onInvalid).toHaveBeenCalledTimes(1);
+      expect(onInvalid).toHaveBeenCalledWith(expect.any(Object), undefined, submitContext);
+    });
+
+    it('should pass context to transformData', async () => {
+      const { result } = renderHook(() => useForm<FormData>());
+      const onValid = jest.fn();
+      const transformData = jest.fn((data) => ({ ...data, transformed: true }));
+      const handle = result.current.handleSubmit(onValid, undefined, { transformData });
+
+      await act(async () => {
+        await handle(undefined, submitContext);
+      });
+
+      expect(transformData).toHaveBeenCalledTimes(1);
+      expect(transformData).toHaveBeenCalledWith(expect.any(Object), submitContext);
+      expect(onValid).toHaveBeenCalledTimes(1);
+      expect(onValid).toHaveBeenCalledWith(
+        expect.objectContaining({ transformed: true }),
+        undefined,
+        submitContext,
+      );
+    });
+
+    it('should work correctly without context provided', async () => {
+      const { result } = renderHook(() => useForm<FormData>());
+      const onValid = jest.fn();
+      const handle = result.current.handleSubmit(onValid);
+
+      await act(async () => {
+        await handle(undefined); // No context here
+      });
+
+      expect(onValid).toHaveBeenCalledTimes(1);
+      expect(onValid).toHaveBeenCalledWith(expect.any(Object), undefined, undefined);
+    });
+
+    it('should allow passing context even if onValid/onInvalid are undefined', async () => {
+      const { result } = renderHook(() => useForm<FormData>());
+      // No onValid, onInvalid provided
+      const handle = result.current.handleSubmit(undefined as any);
+      const submitPromise = act(async () => {
+        await handle(undefined, submitContext);
+      });
+
+      // Expect the promise to resolve without errors
+      await expect(submitPromise).resolves.toBeUndefined();
+    });
+  });
 });
