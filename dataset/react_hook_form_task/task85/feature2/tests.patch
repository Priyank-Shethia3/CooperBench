+  describe('isLoadingExternalValues', () => {
+    type FormValues = {
+      test: string;
+    };
+
+    const App = ({ values, isLoadingExternalValues }: UseFormProps<FormValues>) => {
+      const { register, formState } = useForm<FormValues>({
+        values,
+        isLoadingExternalValues,
+      });
+
+      return (
+        <form>
+          <input {...register('test')} />
+          <p>Loading: {formState.isLoading ? 'true' : 'false'}</p>
+        </form>
+      );
+    };
+
+    it('should set isLoading to true when isLoadingExternalValues is true', async () => {
+      render(<App isLoadingExternalValues={true} values={{ test: '' }} />);
+      expect(screen.getByText('Loading: true')).toBeInTheDocument();
+    });
+
+    it('should not update values when isLoadingExternalValues is true', async () => {
+      const { rerender } = render(
+        <App isLoadingExternalValues={true} values={{ test: 'initial' }} />,
+      );
+      expect((screen.getByRole('textbox') as HTMLInputElement).value).toEqual(
+        'initial',
+      );
+      expect(screen.getByText('Loading: true')).toBeInTheDocument();
+
+      // Rerender with new values but still loading
+      rerender(<App isLoadingExternalValues={true} values={{ test: 'updated' }} />);
+      expect((screen.getByRole('textbox') as HTMLInputElement).value).toEqual(
+        'initial', // Value should not change while loading
+      );
+      expect(screen.getByText('Loading: true')).toBeInTheDocument();
+    });
+
+    it('should update values when isLoadingExternalValues becomes false', async () => {
+      const { rerender } = render(
+        <App isLoadingExternalValues={true} values={{ test: 'initial' }} />,
+      );
+      expect((screen.getByRole('textbox') as HTMLInputElement).value).toEqual(
+        'initial',
+      );
+      expect(screen.getByText('Loading: true')).toBeInTheDocument();
+
+      // Rerender with new values and loading finished
+      rerender(<App isLoadingExternalValues={false} values={{ test: 'updated' }} />);
+
+      await waitFor(() => {
+        expect((screen.getByRole('textbox') as HTMLInputElement).value).toEqual(
+          'updated', // Value should update now
+        );
+      });
+      expect(screen.getByText('Loading: false')).toBeInTheDocument();
+    });
+
+    it('should transition from loading to not loading', async () => {
+      const { rerender } = render(
+        <App isLoadingExternalValues={true} values={{ test: 'loading' }} />,
+      );
+      expect(screen.getByText('Loading: true')).toBeInTheDocument();
+
+      // Rerender with loading finished
+      rerender(<App isLoadingExternalValues={false} values={{ test: 'loading' }} />);
+
+      await waitFor(() => {
+         expect(screen.getByText('Loading: false')).toBeInTheDocument();
+      })
+      expect((screen.getByRole('textbox') as HTMLInputElement).value).toEqual(
+        'loading',
+      );
+    });
+  });
