+package chi
+
+import (
+	"net/http"
+	"net/http/httptest"
+	"testing"
+)
+
+func TestRoutePriorityOrder(t *testing.T) {
+	r := NewRouter()
+
+	// Register in reverse priority order
+	r.WithPriority(PriorityLow).Get("/resources", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("low"))
+	})
+
+	r.WithPriority(PriorityNormal).Get("/resources", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("normal"))
+	})
+
+	r.WithPriority(PriorityHigh).Get("/resources", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("high"))
+	})
+
+	ts := httptest.NewServer(r)
+	defer ts.Close()
+
+	// Test that highest priority route is selected regardless of registration order
+	resp, body := testRequest(t, ts, "GET", "/resources", nil)
+	if resp.StatusCode != 200 || body != "high" {
+		t.Fatalf("expected high priority handler to be called, got %s", body)
+	}
+}
