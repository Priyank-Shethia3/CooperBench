+func TestCORS(t *testing.T) {
+	r := NewRouter()
+	r.EnableCORS()
+
+	r.Get("/api/users", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("users"))
+	})
+
+	r.Post("/api/users", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("create user"))
+	})
+
+	r.Get("/api/items", func(w http.ResponseWriter, r *http.Request) {
+		w.Write([]byte("items"))
+	})
+
+	ts := httptest.NewServer(r)
+	defer ts.Close()
+
+	t.Run("Basic request includes CORS headers", func(t *testing.T) {
+		resp, _ := testRequest(t, ts, "GET", "/api/users", nil)
+
+		if resp.StatusCode != 200 {
+			t.Fatalf("Expected 200 status code, got %d", resp.StatusCode)
+		}
+
+		origin := resp.Header.Get("Access-Control-Allow-Origin")
+		if origin != "*" {
+			t.Fatalf("Expected Access-Control-Allow-Origin header to be '*', got '%s'", origin)
+		}
+	})
+
+	t.Run("OPTIONS request returns appropriate CORS headers", func(t *testing.T) {
+		req, err := http.NewRequest("OPTIONS", ts.URL+"/api/users", nil)
+		if err != nil {
+			t.Fatal(err)
+		}
+
+		resp, err := http.DefaultClient.Do(req)
+		if err != nil {
+			t.Fatal(err)
+		}
+		defer resp.Body.Close()
+
+		// Should respond with 204 No Content for preflight
+		if resp.StatusCode != 204 {
+			t.Fatalf("Expected 204 status code, got %d", resp.StatusCode)
+		}
+
+		methods := resp.Header.Get("Access-Control-Allow-Methods")
+		if methods == "" {
+			t.Fatal("Expected non-empty Access-Control-Allow-Methods header")
+		}
+
+		// Just verify that the header exists and contains some common methods
+		if !strings.Contains(methods, "GET") || !strings.Contains(methods, "POST") {
+			t.Fatalf("Expected Access-Control-Allow-Methods to contain at least GET and POST, got '%s'", methods)
+		}
+
+		// Should also have the other CORS headers
+		if resp.Header.Get("Access-Control-Allow-Headers") == "" {
+			t.Fatal("Expected Access-Control-Allow-Headers to be set")
+		}
+
+		if resp.Header.Get("Access-Control-Max-Age") == "" {
+			t.Fatal("Expected Access-Control-Max-Age to be set")
+		}
+	})
+
+	t.Run("Method not allowed includes Allow header", func(t *testing.T) {
+		req, err := http.NewRequest("PUT", ts.URL+"/api/items", nil)
+		if err != nil {
+			t.Fatal(err)
+		}
+
+		resp, err := http.DefaultClient.Do(req)
+		if err != nil {
+			t.Fatal(err)
+		}
+		defer resp.Body.Close()
+
+		if resp.StatusCode != 405 {
+			t.Fatalf("Expected 405 status code, got %d", resp.StatusCode)
+		}
+
+		allow := resp.Header.Get("Allow")
+		if allow == "" {
+			t.Fatal("Expected non-empty Allow header")
+		}
+
+		// Just verify that the header exists and contains some common methods
+		if !strings.Contains(allow, "GET") {
+			t.Fatalf("Expected Allow header to contain at least GET, got '%s'", allow)
+		}
+	})
