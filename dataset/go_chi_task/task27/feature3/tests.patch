+func TestDebugLogging(t *testing.T) {
+	// Save original stderr and restore it after the test
+	originalStderr := os.Stderr
+	defer func() { os.Stderr = originalStderr }()
+
+	// Create a pipe to capture stderr output
+	r, w, err := os.Pipe()
+	if err != nil {
+		t.Fatalf("Failed to create pipe: %v", err)
+	}
+	os.Stderr = w
+
+	// Ensure debug logging is initially disabled
+	debugLogging = false
+
+	// This should not produce output
+	logDebug("This should not be logged")
+
+	// Enable debug logging and check for output
+	EnableDebugLogging()
+	if !debugLogging {
+		t.Error("Debug logging should be enabled")
+	}
+
+	// Log a test message
+	testMessage := "Test debug message"
+	logDebug(testMessage)
+
+	// Close write end of pipe to receive all output
+	w.Close()
+
+	// Read captured output
+	var buf bytes.Buffer
+	_, err = io.Copy(&buf, r)
+	if err != nil {
+		t.Fatalf("Failed to read from pipe: %v", err)
+	}
+
+	// Check if the debug message was logged
+	output := buf.String()
+	if !strings.Contains(output, testMessage) {
+		t.Errorf("Expected output to contain %q, but got %q", testMessage, output)
+	}
+	if !strings.Contains(output, "[CHI-DEBUG]") {
+		t.Errorf("Expected output to contain [CHI-DEBUG] prefix, but got %q", output)
+	}
+}
