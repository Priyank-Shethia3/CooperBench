+package chi
+
+import (
+	"fmt"
+	"os"
+)
+
+var (
+	// Debug level for logging, can be set at runtime
+	debugLogging = false
+)
+
+// EnableDebugLogging turns on debug-level logging
+func EnableDebugLogging() {
+	debugLogging = true
+}
+
+// logDebug logs debug information if debug logging is enabled
+func logDebug(format string, v ...interface{}) {
+	if debugLogging {
+		fmt.Fprintf(os.Stderr, "[CHI-DEBUG] "+format+"\n", v...)
+	}
+}
+
+// logError logs error information
+func logError(format string, v ...interface{}) {
+	fmt.Fprintf(os.Stderr, "[CHI-ERROR] "+format+"\n", v...)
+}
