+def test_exif_transpose_with_error_handler() -> None:
+    with Image.open("Tests/images/xmp_tags_orientation.png") as im:
+        assert im.getexif()[0x0112] == 3
+ 
+        # Add problematic XMP data that would normally cause an error
+        im.info["xmp"] = 123  # Not a string or bytes-like object
+ 
+        # Define an error handler that returns a fallback value
+        def custom_error_handler(error, key, value):
+            # Log the error
+            print(f"Error processing {key}: {error}")
+            # Return a fallback value for xmp data
+            return ""
+ 
+        # This should use our handler instead of raising TypeError
+        transposed_im = ImageOps.exif_transpose(im, error_handler=custom_error_handler)
+ 
+        # Verify orientation was applied and removed
+        assert 0x0112 not in transposed_im.getexif()
+        # Verify our handler was used (xmp was set to empty string)
+        assert transposed_im.info["xmp"] == ""
+
