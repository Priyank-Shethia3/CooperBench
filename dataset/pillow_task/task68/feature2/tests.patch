+def test_exif_transpose_strip_metadata() -> None:
+    with Image.open("Tests/images/xmp_tags_orientation.png") as im:
+        assert im.getexif()[0x0112] == 3
+ 
+        # Check that image has some metadata
+        assert len(im.getexif()) > 0
+        assert im.info
+ 
+        # With strip_metadata=True, all metadata should be gone
+        transposed_im = ImageOps.exif_transpose(im, strip_metadata=True)
+ 
+        # Verify orientation was applied but metadata was stripped
+        assert 0x0112 not in transposed_im.getexif()
+        assert len(transposed_im.getexif()) == 0
+ 
+        # Verify all info keys related to metadata are removed
+        metadata_keys = ["exif", "xmp", "XML:com.adobe.xmp", "Raw profile type exif"]
+        for key in metadata_keys:
+            if key != "exif":
+                assert key not in transposed_im.info
+
