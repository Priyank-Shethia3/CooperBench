+def test_exif_transpose_preserve_metadata() -> None:
+    with Image.open("Tests/images/xmp_tags_orientation.png") as im:
+        # Get original metadata count (except orientation)
+        original_exif = im.getexif()
+        original_exif_count = len(original_exif) - (1 if 0x0112 in original_exif else 0)
+ 
+        # Default behavior should preserve other metadata
+        transposed_im = ImageOps.exif_transpose(im)
+ 
+        # Orientation should be removed but other tags preserved
+        assert 0x0112 not in transposed_im.getexif()
+        assert len(transposed_im.getexif()) == original_exif_count
