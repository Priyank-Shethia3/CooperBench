+def test_exif_transpose_with_multi_transform_callback() -> None:
+    with Image.open("Tests/images/xmp_tags_orientation.png") as im:
+        assert im.getexif()[0x0112] == 3  # Initial orientation is 3 (ROTATE_180)
+ 
+        # Custom transformer that applies multiple transformations
+        def multi_transform_callback(orientation):
+            if orientation == 3:
+                return [Image.Transpose.ROTATE_90, Image.Transpose.ROTATE_90]
+            return None  # Fall back to default for other orientations
+ 
+        # Use custom transformer that should apply ROTATE_90 twice (equivalent to ROTATE_180)
+        transposed_im = ImageOps.exif_transpose(im, transform_callback=multi_transform_callback)
+ 
+        # Verify orientation was removed
+        assert 0x0112 not in transposed_im.getexif()
+ 
+        # Compare with direct application of ROTATE_180
+        expected_im = im.transpose(Image.Transpose.ROTATE_180)
+        assert_image_equal(transposed_im, expected_im)
