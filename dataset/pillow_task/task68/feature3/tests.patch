+def test_exif_transpose_with_custom_transformer() -> None:
+    with Image.open("Tests/images/xmp_tags_orientation.png") as im:
+        assert im.getexif()[0x0112] == 3  # Initial orientation is 3 (ROTATE_180)
+ 
+        # Custom transformer that always applies FLIP_LEFT_RIGHT regardless of orientation
+        def custom_transformer(orientation):
+            return Image.Transpose.FLIP_LEFT_RIGHT
+ 
+        # Use our custom transformer
+        transposed_im = ImageOps.exif_transpose(im, transform_callback=custom_transformer)
+ 
+        # Verify orientation was removed
+        assert 0x0112 not in transposed_im.getexif()
+ 
+        # Compare with direct application of FLIP_LEFT_RIGHT
+        expected_im = im.transpose(Image.Transpose.FLIP_LEFT_RIGHT)
+        assert_image_equal(transposed_im, expected_im)
