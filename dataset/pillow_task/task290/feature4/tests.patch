+def test_error_threshold_quantize() -> None:
+    image = hopper()
+ 
+    # Standard quantization with many colors (high quality)
+    high_quality = image.quantize(256)
+    high_quality_rgb = high_quality.convert("RGB")
+ 
+    # Lower quality with error threshold (should use fewer colors)
+    with_threshold = image.quantize(256, error_threshold=30.0)
+    with_threshold_rgb = with_threshold.convert("RGB")
+ 
+    # Very low threshold (should use almost as many colors as high quality)
+    low_threshold = image.quantize(256, error_threshold=20.0)
+    low_threshold_rgb = low_threshold.convert("RGB")
+ 
+    import numpy as np
+    # Calculate MSE between original and quantized images
+    image_array = np.array(image)
+    high_quality_array = np.array(high_quality_rgb)
+    with_threshold_array = np.array(with_threshold_rgb)
+    low_threshold_array = np.array(low_threshold_rgb)
+ 
+    high_quality_mse = np.mean((image_array - high_quality_array) ** 2)
+    with_threshold_mse = np.mean((image_array - with_threshold_array) ** 2)
+    low_threshold_mse = np.mean((image_array - low_threshold_array) ** 2)
+ 
+    # Count colors in each image
+    high_quality_colors = len(high_quality.getcolors(256) or [])
+    with_threshold_colors = len(with_threshold.getcolors(256) or [])
+    low_threshold_colors = len(low_threshold.getcolors(256) or [])
+ 
+    # Assert that the error threshold is respected
+    assert with_threshold_mse <= 30.0
+    assert low_threshold_mse <= 20.0
+ 
+    # Assert that higher error threshold uses fewer colors
+    assert with_threshold_colors < high_quality_colors
+    assert low_threshold_colors > with_threshold_colors
+ 
+    # Test with threshold that can't be met (should use max colors)
+    impossible_threshold = image.quantize(10, error_threshold=0.1)
+    impossible_colors = len(impossible_threshold.getcolors(256) or [])
+    assert impossible_colors == 10
