+def test_palette_sorting() -> None:
+    """Test that palette sorting works as expected."""
+    # Create a test image with unsorted colors
+    im = Image.new("RGB", (10, 10))
+    colors = [(255, 0, 0), (0, 255, 0), (0, 0, 255), (255, 255, 255), (0, 0, 0)]
+    pixels = []
+    for color in colors:
+        pixels.extend([color] * 20)  # 20 pixels of each color
+    im.putdata(pixels)
+ 
+    # Test brightness sorting
+    brightness_sorted = im.quantize(colors=5, sort_palette="brightness")
+    assert brightness_sorted.palette is not None
+    palette = brightness_sorted.palette.palette
+ 
+    # Extract RGB values from the palette
+    rgb_values = [tuple(palette[i:i+3]) for i in range(0, len(palette), 3)]
+ 
+    # Calculate brightness for each color (simple sum method)
+    brightness_values = [r + g + b for r, g, b in rgb_values]
+ 
+    # Check if sorted by brightness (ascending)
+    assert brightness_values == sorted(brightness_values)
+ 
+    # Test RGB sorting
+    rgb_sorted = im.quantize(colors=5, sort_palette="rgb")
+    assert rgb_sorted.palette is not None
+    palette = rgb_sorted.palette.palette
+ 
+    # Extract RGB values from the palette
+    rgb_values = [tuple(palette[i:i+3]) for i in range(0, len(palette), 3)]
+ 
+    # Should be sorted by R, then G, then B
+    sorted_rgb = sorted(rgb_values, key=lambda x: (x[0], x[1], x[2]))
+    assert rgb_values == sorted_rgb
+
