+    def test_dry_run_save(self, tmp_path: Path) -> None:
+        test_file = tmp_path / "should_not_exist.jpg"
+
+        # Create a test image
+        im = Image.new("RGB", (10, 10), color="blue")
+
+        # Dry run save - should not create a file
+        im.save(test_file, dry_run=True)
+
+        # Verify the file wasn't created
+        assert not test_file.exists()
+
+        # Test that conversion errors are still raised
+        im = Image.new("RGBA", (10, 10))
+
+        # Try a problematic conversion
+        with pytest.raises(OSError):
+            im.save(tmp_path / "test.jpg", format="JPEG", dry_run=True)
+
+    def test_dry_run_save_with_file_object(self) -> None:
+        # Test with a file object
+        im = Image.new("RGB", (10, 10), color="green")
+
+        with io.BytesIO() as output:
+            # Save with dry_run - should not write to the BytesIO
+            im.save(output, format="PNG", dry_run=True)
+
+            # Verify nothing was written
+            assert output.getvalue() == b""
+
+            # Normal save should write data
+            im.save(output, format="PNG")
+            assert len(output.getvalue()) > 0
