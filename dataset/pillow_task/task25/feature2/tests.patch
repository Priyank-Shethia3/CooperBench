+    def test_save_preserve_readonly(self, tmp_path: Path) -> None:
+        temp_file = tmp_path / "temp.bmp"
+
+        # Test with preserve_readonly=True
+        with Image.open("Tests/images/rgb32bf-rgba.bmp") as im:
+            assert im.readonly
+
+            im.save(temp_file, preserve_readonly=True)
+            assert im.readonly, "readonly flag should be preserved when preserve_readonly=True"
+
+        # Test with preserve_readonly=False (default)
+        with Image.open("Tests/images/rgb32bf-rgba.bmp") as im:
+            assert im.readonly
+
+            im.save("Tests/images/rgb32bf-rgba.bmp", preserve_readonly=False)
+            assert not im.readonly, "readonly flag should be cleared when preserve_readonly=False"
+
