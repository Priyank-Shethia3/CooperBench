+    def test_backup_when_saving(self, tmp_path: Path) -> None:
+        # Create an initial image
+        original_file = tmp_path / "original.jpg"
+        original_img = Image.new("RGB", (10, 10), color="red")
+        original_img.save(original_file)
+
+        # Verify file exists and get its stats
+        assert original_file.exists()
+        original_stat = original_file.stat()
+        original_content = original_file.read_bytes()
+
+        # Create a different image and save over the original with backup
+        new_img = Image.new("RGB", (10, 10), color="blue")
+        new_img.save(original_file, backup=True)
+
+        # Verify backup file was created
+        backup_file = tmp_path / "original.jpg.bak"
+        assert backup_file.exists()
+
+        # Verify original content was preserved in backup
+        assert backup_file.read_bytes() == original_content
+
+        # Verify original file was updated
+        assert original_file.stat().st_mtime >= original_stat.st_mtime
+        assert original_file.read_bytes() != original_content
+
+    def test_backup_with_custom_suffix(self, tmp_path: Path) -> None:
+        # Create an initial image
+        original_file = tmp_path / "custom.png"
+        original_img = Image.new("RGB", (10, 10), color="green")
+        original_img.save(original_file)
+
+        # Create a different image and save over the original with custom backup suffix
+        new_img = Image.new("RGB", (10, 10), color="yellow")
+        new_img.save(original_file, backup=True, backup_suffix=".backup")
+
+        # Verify backup file was created with custom suffix
+        backup_file = tmp_path / "custom.png.backup"
+        assert backup_file.exists()
+
+    def test_backup_with_file_object(self, tmp_path: Path) -> None:
+        # Create an initial image
+        original_file = tmp_path / "fileobj.png"
+        original_img = Image.new("RGB", (10, 10), color="green")
+        original_img.save(original_file)
+
+        # Backup should not be created when using file objects
+        new_img = Image.new("RGB", (10, 10), color="purple")
+
+        with open(original_file, "wb") as f:
+            new_img.save(f, format="PNG", backup=True)
+
+        # Verify no backup file was created (since only paths support backup)
+        backup_file = tmp_path / "fileobj.png.bak"
