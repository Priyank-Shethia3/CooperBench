+def test_is_regex_with_flags():
+    # Test case insensitive matching
+    assert 'ABC123' == IsRegex(r'^[a-z]+\d+$', re.IGNORECASE)
+    assert 'Hello World' == IsRegex(r'^hello world$', re.IGNORECASE)
+ 
+    # Test multiline flag
+    multiline_text = 'line1\nline2\nline3'
+    assert multiline_text == IsRegex(r'^line1$.*^line3$', re.MULTILINE | re.DOTALL)
+
+
+def test_is_regex_edge_cases():
+    # Empty string
+    assert '' == IsRegex(r'^$')
+    assert 'nonempty' != IsRegex(r'^$')
+ 
+    # Special regex characters
+    assert 'a.b' == IsRegex(r'a\.b')
+    assert 'a*b' == IsRegex(r'a\*b')
+    assert 'a+b' == IsRegex(r'a\+b')
+ 
+    # Unicode support
+    assert 'café' == IsRegex(r'^café$')
+    assert '测试' == IsRegex(r'^测试$')
+
+
+def test_is_regex_performance():
