+            "test2.html": "{% trans %}Missing Translation{% endtrans %}",
+            "test3.html": "{% trans %}Not Found{% endtrans %}"
+        }
+ 
+        env = Environment(
+            loader=DictLoader(templates),
+            extensions=["jinja2.ext.i18n"]
+        )
+        env.install_gettext_callables_with_fallback(
