+
+    def test_prefix_loader_alias(self, prefix_loader):
+        # Add alias to one of the sub-loaders
+        prefix_loader.mapping["b"].add_alias("main.html", "justdict.html")
+        env = Environment(loader=prefix_loader)
+ 
+        # Test alias works with prefix
+        tmpl = env.get_template("b/main.html")
+        assert tmpl.render().strip() == "FOO"
+
+    def test_alias_chain_prevention(self):
+        loader = loaders.DictLoader({"template.html": "Content"})
+        loader.add_alias("alias1.html", "template.html")
+        # This should not create a chain - alias2 -> alias1 -> template
+        loader.add_alias("alias2.html", "alias1.html")
+        env = Environment(loader=loader)
+ 
+        # alias2 should resolve to alias1, not template.html
+        pytest.raises(TemplateNotFound, env.get_template, "alias2.html")
+
+    def test_alias_overwrite(self):
+        loader = loaders.DictLoader({
+            "template1.html": "Content 1",
+            "template2.html": "Content 2"
+        })
+        loader.add_alias("alias.html", "template1.html")
+        env = Environment(loader=loader, cache_size=0)  # Disable caching
+ 
+        # Initially points to template1
+        assert env.get_template("alias.html").render() == "Content 1"
+ 
+        # Overwrite alias to point to template2
+        loader.add_alias("alias.html", "template2.html")
+        assert env.get_template("alias.html").render() == "Content 2"
+
+    def test_empty_alias_name(self):
+        loader = loaders.DictLoader({"template.html": "Content"})
+        loader.add_alias("", "template.html")
