+class TestTemplateAliasing:
+    def test_dict_loader_alias_basic(self):
+        loader = loaders.DictLoader({"template.html": "Hello World"})
+        loader.add_alias("alias.html", "template.html")
+        env = Environment(loader=loader)
+ 
+        # Test original template works
+        tmpl = env.get_template("template.html")
+        assert tmpl.render() == "Hello World"
+ 
+        # Test alias works
+        tmpl_alias = env.get_template("alias.html")
+        assert tmpl_alias.render() == "Hello World"
+
+    def test_dict_loader_alias_nonexistent_target(self):
+        loader = loaders.DictLoader({"template.html": "Hello World"})
+        loader.add_alias("alias.html", "nonexistent.html")
+        env = Environment(loader=loader)
+ 
+        pytest.raises(TemplateNotFound, env.get_template, "alias.html")
+
+    def test_dict_loader_remove_alias(self):
+        loader = loaders.DictLoader({"template.html": "Hello World"})
+        loader.add_alias("alias.html", "template.html")
+        env = Environment(loader=loader, cache_size=0)  # Disable caching
+ 
+        # Alias works initially
+        tmpl = env.get_template("alias.html")
+        assert tmpl.render() == "Hello World"
+ 
+        # Remove alias
+        loader.remove_alias("alias.html")
+        pytest.raises(TemplateNotFound, env.get_template, "alias.html")
+
+    def test_dict_loader_multiple_aliases(self):
+        loader = loaders.DictLoader({"template.html": "Content"})
+        loader.add_alias("alias1.html", "template.html")
+        loader.add_alias("alias2.html", "template.html")
+        env = Environment(loader=loader)
+ 
+        # All should work
+        assert env.get_template("template.html").render() == "Content"
+        assert env.get_template("alias1.html").render() == "Content"
+        assert env.get_template("alias2.html").render() == "Content"
+
+    def test_function_loader_alias(self):
+        def load_func(name):
+            if name == "base.html":
+                return "Base Template"
+            return None
+ 
+        loader = loaders.FunctionLoader(load_func)
+        loader.add_alias("main.html", "base.html")
+        env = Environment(loader=loader)
+ 
+        assert env.get_template("base.html").render() == "Base Template"
+        assert env.get_template("main.html").render() == "Base Template"
+
+    def test_filesystem_loader_alias(self, filesystem_loader):
+        filesystem_loader.add_alias("main.html", "test.html")
+        env = Environment(loader=filesystem_loader)
+ 
+        # Original template
+        tmpl = env.get_template("test.html")
+        original_content = tmpl.render().strip()
+ 
+        # Alias should return same content
+        tmpl_alias = env.get_template("main.html")
+        assert tmpl_alias.render().strip() == original_content
+
+    def test_package_loader_alias(self, package_loader):
+        package_loader.add_alias("main.html", "test.html")
+        env = Environment(loader=package_loader)
+ 
+        # Original template
+        tmpl = env.get_template("test.html")
+        original_content = tmpl.render().strip()
+ 
+        # Alias should return same content
+        tmpl_alias = env.get_template("main.html")
+        assert tmpl_alias.render().strip() == original_content
+
+    def test_choice_loader_alias(self, choice_loader):
+        # Add alias to the first loader in choice loader
+        choice_loader.loaders[0].add_alias("main.html", "justdict.html")
+        env = Environment(loader=choice_loader)
+ 
+        # Test alias works
+        tmpl = env.get_template("main.html")
