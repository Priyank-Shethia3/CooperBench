+def test_edit_with_exit_code_handlers(runner, monkeypatch):
+    """Test edit function with custom exit code handlers."""
+    import subprocess
+    called_handlers = []
+
+    def success_handler(exit_code):
+        called_handlers.append(("success", exit_code))
+
+    def cancel_handler(exit_code):
+        called_handlers.append(("cancel", exit_code))
+
+    def error_handler(exit_code):
+        called_handlers.append(("error", exit_code))
+
+    def mock_popen_success(*args, **kwargs):
+        mock_process = type("MockProcess", (), {"wait": lambda self: 0})()
+        return mock_process
+
+    def mock_popen_cancel(*args, **kwargs):
+        mock_process = type("MockProcess", (), {"wait": lambda self: 1})()
+        return mock_process
+
+    def mock_popen_error(*args, **kwargs):
+        mock_process = type("MockProcess", (), {"wait": lambda self: 2})()
+        return mock_process
+
+    # Test successful edit (exit code 0)
+    monkeypatch.setattr(subprocess, "Popen", mock_popen_success)
+
+    result = click.edit(
+        "test content",
+        editor="echo",
+        handle_exit_codes={
+            0: success_handler,
+            1: cancel_handler,
+            2: error_handler,
+        },
+    )
+
+    assert ("success", 0) in called_handlers
+
+    # Test cancelled edit (exit code 1)
+    called_handlers.clear()
+    monkeypatch.setattr(subprocess, "Popen", mock_popen_cancel)
+
+    result = click.edit(
+        "test content",
+        editor="echo",
+        handle_exit_codes={
+            0: success_handler,
+            1: cancel_handler,
+            2: error_handler,
+        },
+    )
+
+    assert ("cancel", 1) in called_handlers
+
+    # Test error edit (exit code 2)
+    called_handlers.clear()
+    monkeypatch.setattr(subprocess, "Popen", mock_popen_error)
+
+    result = click.edit(
+        "test content",
+        editor="echo",
+        handle_exit_codes={
+            0: success_handler,
+            1: cancel_handler,
+            2: error_handler,
+        },
+    )
+
+    assert ("error", 2) in called_handlers
+
