+def test_edit_monitor_process_error_handling(runner, monkeypatch):
+    """Test that monitoring errors don't break the edit function."""
+    def failing_monitor_callback(event_type, process_id, editor_command, timestamp):
+        raise Exception("Monitor callback failed")
+
+    monkeypatch.setenv("EDITOR", "echo")
+
+    # Should not raise an exception even if monitor callback fails, but should warn
+    with pytest.warns(UserWarning):
+        result = click.edit("test content", monitor_process=failing_monitor_callback, require_save=False)
+        assert result is not None
