+def test_edit_monitor_process_thread_safety(runner, monkeypatch):
+    """Test that process monitoring doesn't interfere with the main thread."""
+    import threading
+    events = []
+    main_thread_id = threading.get_ident()
+ 
+    def monitor_callback(event_type, process_id, editor_command, timestamp):
+        # This callback runs in a separate thread
+        current_thread_id = threading.get_ident()
+        events.append((event_type, current_thread_id != main_thread_id))
+ 
+    monkeypatch.setenv("EDITOR", "echo")
+ 
+    result = click.edit("test content", monitor_process=monitor_callback, require_save=False)
+ 
+    # Edit should complete successfully
+    assert result is not None
+ 
+    # Monitor callbacks should have been called
+    assert len(events) >= 1
+
