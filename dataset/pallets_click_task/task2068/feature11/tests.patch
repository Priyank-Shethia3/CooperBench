+def test_edit_monitor_process_callback_parameters(runner, monkeypatch):
+    """Test that monitor callback receives correct parameter types."""
+    callback_calls = []
+
+    def monitor_callback(event_type, process_id, editor_command, timestamp):
+        callback_calls.append({
+            'event_type': event_type,
+            'process_id': process_id,
+            'editor_command': editor_command,
+            'timestamp': timestamp,
+            'event_type_type': type(event_type),
+            'process_id_type': type(process_id),
+            'editor_command_type': type(editor_command),
+            'timestamp_type': type(timestamp)
+        })
+
+    monkeypatch.setenv("EDITOR", "echo")
+
+    click.edit("test", monitor_process=monitor_callback)
+
+    assert len(callback_calls) >= 2
+    call = callback_calls[0]
+    assert call['event_type_type'] == str
+    assert call['process_id_type'] == int
+    assert call['editor_command_type'] == str
+    assert call['timestamp_type'] == float
+    assert call['event_type'] == 'start'
+    assert callback_calls[-1]['event_type'] == 'terminate'
