+def test_edit_working_dir_nonexistent_directory(runner, monkeypatch):
+    """Test behavior when working_dir points to non-existent directory."""
+    import subprocess
+
+    # Mock subprocess.Popen to raise OSError for non-existent directory
+    def mock_popen(*args, **kwargs):
+        if kwargs.get("cwd") == "/nonexistent/directory":
+            raise OSError("No such file or directory")
+
+        class MockProcess:
+            def wait(self):
+                return 0
+
+        return MockProcess()
+
+    monkeypatch.setattr(subprocess, "Popen", mock_popen)
+
+    # Should raise ClickException when directory doesn't exist
+    with pytest.raises(click.ClickException, match="Editing failed"):
+        click.edit("test content", working_dir="/nonexistent/directory")
