+def test_edit_with_working_dir(runner, tmp_path, monkeypatch):
+    """Test that edit() function respects working_dir parameter."""
+    # Create a test directory structure
+    test_dir = tmp_path / "test_project"
+    test_dir.mkdir()
+    config_file = test_dir / "config.txt"
+    config_file.write_text("project_setting=value")
+
+    # Track the working directory used by subprocess
+    captured_cwd = []
+
+    def mock_popen(*args, **kwargs):
+        captured_cwd.append(kwargs.get("cwd"))
+
+        # Mock successful editor execution
+        class MockProcess:
+            def wait(self):
+                return 0
+
+        return MockProcess()
+
+    monkeypatch.setattr(subprocess, "Popen", mock_popen)
+
