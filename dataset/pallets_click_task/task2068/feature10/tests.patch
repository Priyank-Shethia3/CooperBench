+def test_edit_working_dir_environment_change(runner, tmp_path, monkeypatch):
+    """Test that the editor actually runs in the specified working directory."""
+    import os
+    import subprocess
+
+    # Create test directories
+    project_dir = tmp_path / "project"
+    project_dir.mkdir()
+    other_dir = tmp_path / "other"
+    other_dir.mkdir()
+
+    # Track where files are created by our mock editor
+    created_files = []
+
+    def mock_popen(*args, **kwargs):
+        # Extract the working directory from kwargs
+        cwd = kwargs.get("cwd")
+
+        # Our mock "editor" creates a file in its working directory
+        # to prove it's actually running there
+        if cwd:
+            marker_file = os.path.join(cwd, "editor_was_here.txt")
+        else:
+            # If no cwd specified, create in current directory
+            marker_file = "editor_was_here.txt"
+
+        created_files.append(marker_file)
+
+        # Create the marker file to simulate editor activity
+        with open(marker_file, "w") as f:
+            f.write("editor ran here")
+
+        class MockProcess:
+            def wait(self):
+                return 0
+
+        return MockProcess()
+
+    monkeypatch.setattr(subprocess, "Popen", mock_popen)
+
+    # Test 1: Editor runs in specified working_dir
+    click.edit("test content", working_dir=str(project_dir))
+
+    # Verify the marker file was created in the project directory
+    expected_file = project_dir / "editor_was_here.txt"
+    assert expected_file.exists(), "Editor should have created file in project_dir"
+    assert expected_file.read_text() == "editor ran here"
+
+    # Clean up for next test
+    created_files.clear()
+    expected_file.unlink()
+
+    # Test 2: Editor runs in a different working_dir
+    click.edit("test content", working_dir=str(other_dir))
+
+    # Verify the marker file was created in the other directory
+    expected_file = other_dir / "editor_was_here.txt"
+    assert expected_file.exists(), "Editor should have created file in other_dir"
+    assert expected_file.read_text() == "editor ran here"
+
+    # Verify it was NOT created in the project directory
+    project_marker = project_dir / "editor_was_here.txt"
+    assert not project_marker.exists(), (
+        "Editor should not have created file in project_dir"
+    )
