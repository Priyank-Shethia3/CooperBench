+def _multiple_files_helper(mode: str):
+    """Helper function to reduce code duplication."""
+    def _file_name_generator(file1_name: str, file2_name: str):
+        yield file1_name
+        yield file2_name
+
+    with tempfile.NamedTemporaryFile(
+        mode="w", delete=False
+    ) as file1, tempfile.NamedTemporaryFile(mode="w", delete=False) as file2:
+        file1.write("content1\n")
+        file1.flush()
+        file2.write("content2\n")
+        file2.flush()
+
+        if mode == "list":
+            filename = [file1.name, file2.name]
+        if mode == "tuple":
+            filename = (file1.name, file2.name)
+        if mode == "single":
+            filename = file1.name
+        if mode == "single_list":
+            filename = [file1.name]
+        if mode == "generator":
+            filename = _file_name_generator(file1.name, file2.name)
+
+        try:
+            result = click.edit(
+                filename=filename, editor="sed -i~ 's/$/Test/'"
+            )
+            with open(file1.name) as f:
+                file1_content = f.read()
+
+            with open(file2.name) as f:
+                file2_content = f.read()
+        finally:
+            os.unlink(file1.name)
+            os.unlink(file2.name)
+    return result, file1_content, file2_content
