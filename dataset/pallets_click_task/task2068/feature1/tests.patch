+def test_edit_with_custom_environment(runner, monkeypatch):
+    """Test that custom environment variables are passed to the editor."""
+    import subprocess
+
+    captured_env = []
+
+    class MockPopen:
+        def __init__(self, args, env=None, **kwargs):
+            captured_env.append(env)
+            self.returncode = 0
+
+        def wait(self):
+            return 0
+
+    monkeypatch.setattr(subprocess, "Popen", MockPopen)
+
+    with tempfile.NamedTemporaryFile() as file1, tempfile.NamedTemporaryFile() as file2:
+        custom_env = {"CUSTOM_VAR": "test_value", "EDITOR_OPTION": "special"}
+        click.edit(filename=[file1.name, file2.name], editor="vim", env=custom_env)
+
+        # Verify environment was passed
+        assert len(captured_env) == 1
+        env = captured_env[0]
+        assert env is not None
+        assert env["CUSTOM_VAR"] == "test_value"
+        assert env["EDITOR_OPTION"] == "special"
