+                    capture_output=True,
+                    text=True,
+                    timeout=2,
+                )
+                if result.returncode == 0:
+                    branches = [
+                        line.strip()
+                        for line in result.stdout.splitlines()
+                        if incomplete in line.strip()
+                    ]
+                    return [CompletionItem(branch) for branch in sorted(branches)[:20]]
+            except (
+                subprocess.TimeoutExpired,
+                subprocess.SubprocessError,
+                FileNotFoundError,
