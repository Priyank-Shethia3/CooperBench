+def test_audio_block_resolve_audio_trims_nulls():
+    from llama_index.core.base.llms.types import AudioBlock
+
+    # Audio with leading and trailing null bytes
+    raw_audio = b"\x00\x00\x01\x02\x03\x00\x00"
+    b64_audio = base64.b64encode(raw_audio)
+    block = AudioBlock(audio=b64_audio)
+
+    # Resolve and confirm nulls are trimmed
+    buf = block.resolve_audio(trim=True)
+    resolved = buf.read()
+    assert resolved == b"\x01\x02\x03", "Resolved audio should trim leading and trailing null bytes"
+
+    # Ensure no trimming when there are no leading/trailing nulls
+    raw_audio_clean = b"\x10\x20\x30"
+    b64_audio_clean = base64.b64encode(raw_audio_clean)
+    block_clean = AudioBlock(audio=b64_audio_clean)
+    resolved_clean = block_clean.resolve_audio().read()
+    assert resolved_clean == raw_audio_clean, "Resolved clean audio should remain unchanged"
+
