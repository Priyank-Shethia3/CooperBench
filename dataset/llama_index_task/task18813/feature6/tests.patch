+def test_empty_audio_with_format_returns_placeholder():
+    # When audio is empty but format is provided, we should get a zero-byte buffer with format attached as mimetype
+    b = AudioBlock(audio=b"", format="mp3")
+    audio_buf = b.resolve_audio()
+    assert isinstance(audio_buf, BytesIO)
+    assert audio_buf.read() == b""
+    assert hasattr(audio_buf, "mimetype")
+    assert getattr(audio_buf, "mimetype") == "mp3"
+
+    audio_b64 = AudioBlock(audio=b"", format="wav").resolve_audio(as_base64=True)
+    assert isinstance(audio_b64, BytesIO)
+    assert audio_b64.read() == b""
+    assert hasattr(audio_b64, "mimetype")
+    assert getattr(audio_b64, "mimetype") == "wav"
+    assert getattr(audio_b64, "as_base64", False) is True
