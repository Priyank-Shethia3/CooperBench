+def test_audio_block_resolve_audio_with_progress_callback():
+    from llama_index.core.base.llms.types import AudioBlock
+
+    # Define test audio: has padding to simulate trimming behavior
+    padded_audio = b"\x00\x00\xde\xad\xbe\xef\x00"
+    b64_audio = base64.b64encode(padded_audio)
+    block = AudioBlock(audio=b64_audio)
+
+    captured_size = None
+
+    def capture_size_callback(size: int):
+        nonlocal captured_size
+        captured_size = size
+
+    buf = block.resolve_audio(on_resolve=capture_size_callback)
+    result = buf.read()
+
+    assert result == b"\xde\xad\xbe\xef"
+    assert captured_size == 4
+
+    # Also check that calling without callback doesn't raise
+    block.resolve_audio()  # should not raise
+
