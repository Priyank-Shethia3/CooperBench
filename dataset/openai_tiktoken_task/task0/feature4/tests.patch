+import pytest
+import tiktoken
+
+def test_token_chunking():
+    # Create a simple encoding for testing
+    enc = tiktoken.get_encoding("cl100k_base")
+ 
+    text = "I love you so much that I want to marry you"
+    tokens = enc.encode(text, chunk_size=22)
+    assert len(tokens) == 2
+    assert tokens[0] == [40, 3021, 499, 779, 1790, 49588]
+
+    tokens = enc.encode(text, chunk_size=100)
+    assert len(tokens) == 1
+    print(tokens)
+    assert tokens == [[40, 3021, 499, 779, 1790, 430, 358, 1390, 311, 32918, 499]]
