+import pytest
+import tiktoken
+
+def test_token_positions():
+    # Create a simple encoding for testing
+    enc = tiktoken.get_encoding("cl100k_base")
+ 
+    # Test basic position tracking
+    text = "hello world!"
+    tokens, positions = enc.encode(text, return_positions=True)
+    assert len(tokens) == 3
+    assert positions == [0, 5, 11]
+ 
+    # Test with whitespace
+    text = "hello world !"
+    tokens, positions = enc.encode(text, return_positions=True)
+    assert len(tokens) == 3
+    assert positions == [0, 5, 11]
+ 
+    # Test with unknown characters
+    text = "hello???world!"
+    tokens, positions = enc.encode(text, return_positions=True)
+    assert len(tokens) == 4
+    # Positions should skip over unknown characters
+    assert positions == [0, 5, 8, 13]
