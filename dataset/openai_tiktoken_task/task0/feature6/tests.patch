+import pytest
+import tiktoken
+
+def test_token_transformation():
+    # Create a simple encoding for testing
+    enc = tiktoken.get_encoding("cl100k_base")
+ 
+    # Define transformers
+    def uppercase_transformer(text):
+        return text.upper()
+ 
+    def alphabet_increment(text):
+        result = ''
+        for t in text:
+            if t.isalpha():
+                if t == 'z':
+                    result += 'a'
+                elif t == 'Z':
+                    result += 'A'
+                else:
+                    result += chr(ord(t) + 1)
+            else:
+                result += t 
+        return result
+ 
+    # Test pre-encoding transformation
+    text = "a b c"
+    tokens = enc.encode(text)
+    assert tokens == [64, 293, 272]
+
+    tokens = enc.encode(text, transformers=[uppercase_transformer])
+    assert tokens == [32, 426, 356]
+ 
+    tokens = enc.encode(text, transformers=[alphabet_increment])
+    assert tokens == [65, 272, 294]
+ 
+    tokens = enc.encode(text, transformers=[uppercase_transformer, alphabet_increment])
+    assert tokens == [33, 356, 423]
+
+    tokens = enc.encode(text, transformers=[alphabet_increment, uppercase_transformer])
+    assert tokens == [33, 356, 423]
