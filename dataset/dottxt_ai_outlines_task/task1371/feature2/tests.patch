+def test_register_filter_basic():
+    """Test basic filter registration and usage."""
+    # Register a simple filter
+    register_filter("test_capitalize", str.upper)
+ 
+    # Test using the filter in a template
+    content = "{{ text | test_capitalize }}"
+    template = Prompt._template_from_str(content)
+    result = template.render(text="hello world")
+    assert result == "HELLO WORLD"
+ 
+    # Clean up
+    unregister_filter("test_capitalize")
+
