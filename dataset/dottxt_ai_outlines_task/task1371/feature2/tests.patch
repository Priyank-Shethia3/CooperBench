+def test_unregister_filter():
+    """Test filter unregistration."""
+    # Register a filter
+    register_filter("test_filter", str.lower)
+ 
+    # Test that filter works
+    content = "{{ text | test_filter }}"
+    template = Prompt._template_from_str(content)
+    result = template.render(text="HELLO")
+    assert result == "hello"
+ 
+    # Unregister the filter
+    unregister_filter("test_filter")
+ 
+    # Test that filter no longer works by creating a NEW template after unregistration
